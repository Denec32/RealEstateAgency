@{
    ViewData["Title"] = "Регистрация";
}
@model RealEstateAgencyService.ViewModels.RegisterViewModel

<script src="https://code.jquery.com/jquery-3.4.0.js"></script>

<div class="card" style="margin: 16px;">
    <div class="card-body">
        <h5 class="card-title">Регистрация</h5>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <div class="row mb-3">
                <div class="form-group col">
                    @Html.LabelFor(m => m.Email, "Почта")
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email", @required = "required"})
                </div>

                <div class="form-group col">
                    @Html.LabelFor(m => m.PhoneNumber, "Номер телефона")
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @type = "tel", @required = "required" })
                </div>
            </div>
            <div class="row mb-3">
                <div class="form-group col">
                    @Html.LabelFor(m => m.Password, "Пароль")
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password", @required = "required" })
                </div>

                <div class="form-group col">
                    @Html.LabelFor(m => m.PasswordConfirm, "Подтверждение пароля")
                    @Html.TextBoxFor(m => m.PasswordConfirm, new { @class = "form-control", @type = "password", @required = "required" })
                </div>    
            </div>
    
            <div class="row mb-3">
                <div class="form-group col">
                    @Html.LabelFor(m => m.FirstName, "Имя")
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @required = "required" })
                </div>    
    
                <div class="form-group col">
                    @Html.LabelFor(m => m.LastName, "Фамилия")
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @required = "required" })
                </div>    
            </div>
    
            <p class="mb-3">
                <input class="btn btn-primary float-right" type="submit" value="Регистрация" />
            </p>
        }
        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
        {
            <button class="btn btn-dark float-righ" onclick="fillForm();">Заполнить форму</button>
        }
    </div>
</div>

<script>
    function fillForm()
    {
        document.getElementById("Email").value = "test@mail.ru";
        document.getElementById("Password").value = "_Aa123456";
        document.getElementById("PasswordConfirm").value = "_Aa123456";
        document.getElementById("FirstName").value = "Денис";
        document.getElementById("LastName").value = "Зеневич";
        document.getElementById("PhoneNumber").value = "89206798889";
    }
</script>