    </div>
    
    <div class="form-group col">
        @Html.LabelFor(m => m.City, "Город")
        @Html.TextBoxFor(m => m.City, new { @class = "form-control", @type = "text", @required = "required" })
    </div>

    <div class="form-group col">
        @Html.LabelFor(m => m.Street, "Улица")
