@using System.Security.Claims
@using RealEstateAgencyService.Models
@using RealEstateAgencyService.ViewModels

@model Listing;
@{
    ViewData["Title"] = "Обновить объявление";
}
<script src="https://code.jquery.com/jquery-3.4.0.js"></script>

@using (Html.BeginForm("PutListing", "Home", FormMethod.Post, new { enctype="multipart/form-data"}))
{
        <div class="form-group col" hidden>
